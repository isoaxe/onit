{
  "name": "onit",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fullcalendar/daygrid": "^5.9.0",
    "@fullcalendar/list": "^5.9.0",
    "@fullcalendar/react": "^5.9.0",
    "@mui/material": "^5.10.13",
    "@mui/styled-engine-sc": "^5.10.6",
    "firebase": "^8.4.3",
    "firebaseui": "^4.8.0",
    "generate-password": "^1.6.1",
    "react": "^17.0.1",
    "react-datepicker": "^4.2.1",
    "react-dom": "^17.0.1",
    "react-modal": "^3.14.3",
    "react-phone-number-input": "^3.1.23",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "react-select": "^4.3.1",
    "react-switch": "^6.0.0",
    "react-table": "^7.7.0",
    "styled-components": "^5.3.6",
    "typescript": "4.1",
    "validator": "^13.6.0",
    "web-vitals": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-phone-number-input": "^3.0.7",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.10",
    "@types/validator": "^13.1.4",
    "concurrently": "^6.1.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.6.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-all": "cd functions && npm run build && cd .. && npm run build",
    "dev": "concurrently 'npm start' 'cd functions && npm run watch' 'cd functions && npm run serve'",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "serve": "npm run build-all && firebase emulators:start",
    "get-keys": "export GOOGLE_APPLICATION_CREDENTIALS='/Users/lucas/Downloads/onit-keys.json'",
    "deploy": "npm run build && firebase deploy --only hosting:onit-main",
    "deploy-all": "npm run build && firebase deploy",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "/build/**/*",
      "/functions/lib/**/*"
    ],
    "rules": {
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        "tab"
      ],
      "quotes": [
        "warn",
        "double"
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "space-before-function-paren": [
        "warn",
        "always"
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 2,
          "maxBOF": 0,
          "maxEOF": 0
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": [
        "off",
        {
          "allowArgumentsExplicitlyTypedAsAny": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
